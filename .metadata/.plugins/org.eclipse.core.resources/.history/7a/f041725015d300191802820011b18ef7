	public static void main(String[] args) {
		String parent = "./src/com/nius/IO/test";
		File f1 = new File(parent, "test.txt");
		
		String str = "\r\nè¿™ä¸æ˜¯åŠ éœ€æ±‚ è¿™ä¸ªæ”¹äº†ä¸€å †bug[æ‚è„¸][æ‚è„¸][æ‚è„¸]ğŸ˜±ğŸ˜±ğŸ˜±ğŸ˜± \r\n- (void)tabBarController:(UITabBarController *)tabBarController didSelectViewController:(UIViewController *)viewController {\n" + 
				"    [(YJRTabBar *)self.tabBar pubBtnView].hidden = (self.selectedIndex != 2);\n" + 
				"}";
		FileWriter wr = null;
		try {
			wr = new FileWriter(f1, true);
			wr.write(str);
			//wr.write(str, 0, str.length());
			
			wr.flush(); // å¼ºåˆ¶å†²åˆ·ç®¡é“
			
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			if (null != wr) {
				try {
					wr.close();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
		}
	}
}
